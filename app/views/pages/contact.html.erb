<div class="col-xs-12 col-md-8">
  <div id="contact">
  <form action="https://getsimpleform.com/messages?form_api_token=607828dde44ca659f7a189b72c086023" method="post">
    <div class="form-group">
      <label for="name">Votre Nom (required)</label>
      <input name="name" type="text" class="form-control" id="name" required>
    </div>
    <div class="form-group">
      <label for="email">Votre Email (required)</label>
      <input name="email" type="email" class="form-control" id="email" required>
    </div>
    <div class="form-group">
      <label for="subject">Sujet (required)</label>
      <input name="subject" type="text" class="form-control" id="subject" required>
    </div>
    <div class="form-group">
      <label for="message">Votre Message</label>
      <textarea name="message" class="form-control" id="message" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Envoyer</button>
    </form>
  </div>
</div>
