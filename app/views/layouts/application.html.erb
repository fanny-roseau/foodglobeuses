              <%= image_tag "pinterest-2.png", class: "social-sidebar-img"%>
            </a>
          </li>
          <li>
            <a href="https://instagram.com/foodglobeuses/" target="_blank">
              <%= image_tag "instagram-2.png", class: "social-sidebar-img"%>
            </a>
          </li>
        </ul>
      </div>
      <h4 class="widget-title"><%= t('.search') %></h4>
      <div id="search">
      <%= form_tag(articles_path, method: :get, class: "form-inline") do %>
        <div class="wrapper">
          <input type="text" name="search">
