        </li>
        <li>
          <a href="https://instagram.com/p/zh0K1fjr3a/?taken-by=foodglobeuses" target="_blank">
            <%= image_tag "salad.png", class: "img-instagram"%>
          </a>
        </li>
        <li>
          <a href="https://instagram.com/p/0sTEmgjr-j/?taken-by=foodglobeuses" target="_blank">
            <%= image_tag "muesli.png", class: "img-instagram"%>
          </a>
        </li>
        <li>
          <a href="https://instagram.com/p/2Hfs_vDr6X/?taken-by=foodglobeuses" target="_blank">
            <%= image_tag "pancakes.png", class: "img-instagram"%>
