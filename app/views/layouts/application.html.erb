        </li>
        <li>
          <a href="https://instagram.com/p/tIoQCQjrwQ/?taken-by=foodglobeuses" target="_blank">
            <%= image_tag "tuna.png", class: "img-instagram"%>
          </a>
        </li>
        <li>
          <a href="https://instagram.com/p/o8zLekDr-J/?taken-by=foodglobeuses" target="_blank">
            <%= image_tag "frozen.png", class: "img-instagram"%>
          </a>
        </li>
        <li>
          <a href="https://instagram.com/p/ortdacjrxf/?taken-by=foodglobeuses" target="_blank">
            <%= image_tag "eggplant.png", class: "img-instagram"%>
          </a>
        </li>
      </ul>
    </div>
  </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col xs-12">
      <div id="footer-social">
          <p>© 2015 foodglobeuses.com ALL RIGHTS RESERVED.</p>
          <div class="sclicon">
            <a href="https://www.facebook.com/foodglobeuses" target="_blank">
              <%= image_tag "facebook.png", id:"img-size-footer"%>
            </a>
            <a href="https://twitter.com" target="_blank">
              <%= image_tag "twitter.png", id:"img-size-footer"%>
            </a>
            <a href="http://www.pinterest.com" target="_blank">
              <%= image_tag "pinterest.png", id:"img-size-footer"%>
            </a>
            <a href="https://instagram.com/foodglobeuses/" target="_blank">
              <%= image_tag "instagram.png", id:"img-size-footer"%>
            </a>
          </div>
      </div>
    </div>
  </div>
</div>

<% else %>
  <%= yield %>
<% end %>

  <%= javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  <%= javascript_include_tag 'application'%>
  <%= yield(:after_js) %>

  </body>
</html>



